<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y344"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/iv_message"
        android:layout_width="@dimen/x192"
        android:layout_height="@dimen/x192"
        android:layout_marginLeft="@dimen/x58"
        app:qmui_corner_radius="@dimen/x15"
        android:layout_centerVertical="true"
        android:background="@mipmap/ic_launcher"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x46"
        android:layout_toEndOf="@+id/iv_message"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统通知"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/x65"
            />
        <TextView
            android:id="@+id/tv_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/x58"
            android:text="时间"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/x46"
            />
        <TextView
            android:id="@+id/tv_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y40"
            android:layout_below="@+id/tv_message_title"
            android:text="系统通知"
            android:layout_marginRight="@dimen/x129"
            android:textColor="@color/color_666666"
            android:lines="1"
            android:textSize="@dimen/x54"
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/y38"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_marginLeft="@dimen/x58"
        android:layout_alignParentBottom="true"
        android:background="@color/color_EAEAEA"
        />
</RelativeLayout>